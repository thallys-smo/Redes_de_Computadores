{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build with GCC",
            "command": "/usr/bin/g++-13",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++-13"
        },
        {
            "type": "cppbuild",
            "label": "Build with Clang",
            "command": "/usr/bin/clang++-18",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
				"cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang++-18"
        }
    ]
}
